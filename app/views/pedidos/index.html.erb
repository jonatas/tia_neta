<h1>Listando pedidos</h1>

<table>
  <tr>
    <th>Número</th>
    <th>Cliente</th>
    <th>Criado em</th>
  </tr>

<% @pedidos.each do |pedido| %>
  <tr>
    <td><%=h pedido.numero %></td>
    <td><%=h pedido.cliente %></td>
    <td><%=h pedido.data %></td>

    <td><%= link_to 'Mostrar detalhes', pedido %></td>
    <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
    <td><%= link_to 'Excluir', pedido, :confirm => 'Tem certeza que deseja excluir?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Lançar um novo pedido', new_pedido_path %>
